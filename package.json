{
  "name": "nw-react-example",
  "version": "0.1.3",
  "main": "http://localhost:5173/",
  "node-remote": "http://localhost:5173/",
  "window": {
    "icon": "./build/logo512.png"
  },
  "type": "module",
  "homepage": ".",
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@vitejs/plugin-react": "^4.2.1",
    "base-volta-off-of-nwjs": "^1.0.3",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "nw": "^0.84.0",
    "nw-builder": "^4.5.4",
    "react": "^18.2.0",
    "react-devtools": "^4.26.1",
    "react-dom": "^18.2.0",
    "vite": "^5.1.2",
    "vitest": "^1.2.2",
    "wait-on": "^6.0.1",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "postinstall": "base-volta-off-of-nwjs",
    "lint": "eslint ./src/**/*.jsx",
    "test": "vitest",
    "dev": "concurrently -k npm:dev:react npm:dev:nwjs:wait",
    "dev-tools": "concurrently -k \"react-devtools\" \"cross-env REACT_APP_DEVTOOLS=enabled npm start\" \"wait-on http://127.0.0.1:3042 && cross-env NWJS_START_URL=http://127.0.0.1:3042 nw --enable-logging=stderr .\"",
    "dev:react": "concurrently -k npm:dev:react:vite npm:dev:react:tools",
    "dev:react:vite": "vite",
    "dev:react:tools": "react-devtools",
    "dev:nwjs": "nw --enable-logging=stderr .",
    "dev:nwjs:wait": "wait-on -c waitOn.config.json http://localhost:5173 && nw --enable-logging=stderr .",
    "build": "npm run build:react && npm run build:nwjs",
    "build:react": "vite build",
    "build:nwjs": "node pre.nw.js && nwbuild --flavor=sdk --cacheDir=./node_modules/nw --outDir=./out/nwjs --glob=false ./out/react",
    "predist": "cross-env GENERATE_SOURCEMAP=false BUILD_PATH=./dist/app/build/ npm run build",
    "dist": "node dist.mjs"
  },
  "build": {
    "manifestProps": [
      "name",
      "version",
      "main",
      "node-remote",
      "window"
    ],
    "osTypes": [
      "windows"
    ]
  },
  "eslintConfig": {
    "globals": {
      "nw": true
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "volta": {
    "node": "21.1.0"
  }
}