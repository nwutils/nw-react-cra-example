{
  "name": "nw-react-example",
  "version": "0.1.1",
  "main": "main.js",
  "homepage": ".",
  "node-remote": [
    "http://localhost:3042",
    "file://*"
  ],
  "private": true,
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "concurrently": "^7.5.0",
    "cross-env": "^7.0.3",
    "nw": "0.70.1-sdk",
    "nw-builder": "^4.0.1",
    "react": "^18.2.0",
    "react-devtools": "^4.26.1",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "wait-on": "^6.0.1",
    "web-vitals": "^3.1.0"
  },
  "scripts": {
    "dev": "concurrently \"npm start\" \"wait-on http://127.0.0.1:3042 && cross-env NWJS_START_URL=http://127.0.0.1:3042 nw --enable-logging=stderr .\"",
    "dev-tools": "concurrently \"react-devtools\" \"cross-env REACT_APP_DEVTOOLS=enabled npm start\" \"wait-on http://127.0.0.1:3042 && cross-env NWJS_START_URL=http://127.0.0.1:3042 nw --enable-logging=stderr .\"",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predist": "cross-env GENERATE_SOURCEMAP=false BUILD_PATH=./dist/app/build/ npm run build",
    "dist": "node dist.mjs"
  },
  "build": {
    "manifestProps": [
      "name",
      "version",
      "main",
      "node-remote"
    ],
    "osTypes": [
      "windows"
    ]
  },
  "eslintConfig": {
    "globals": {
      "nw": true
    },
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
